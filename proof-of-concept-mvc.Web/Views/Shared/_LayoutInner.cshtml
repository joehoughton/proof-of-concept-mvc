@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeaderContent { @RenderSection("HeaderContent", required: false) }

@section ErrorContent { @RenderSection("ErrorContent", required: false) }

<div class="container">
    <div id="main-content">
        <div class="col-sm-3">
            @RenderSection("Sidebar", required: false)
        </div>

        <div class="col-sm-9" id="manage-content">
            @RenderSection("ManageContent", required: true)
        </div>
    </div>
</div>