@using proof_of_concept_mvc.Helper
@using proof_of_concept_mvc.Models
@model LoginViewModel
@{
    // render straight to _Layout as defined in _ViewStart 
    ViewBag.Title = "Proof of concept";
    ViewBag.ApplicationType = "MVC Application";
}
    <div id="error-message" style="display: none">
        <ul>@Html.BootstrapValidationSummary(true, "Warning:")</ul>
    </div>

    <div id="sign-in">
        <h2>@ViewBag.Title:<br />@ViewBag.ApplicationType</h2>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "sign-in-form" }))
            {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            </div>
            @Html.ValidationSummary(false, "", new { @class = "text-danger", style = "display: none" })
            <button type="submit" class="btn btn-default" id="sign-in-button" value="Log in">Sign In</button>
            }
    </div>
